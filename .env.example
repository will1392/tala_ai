# Tala AI Environment Variables
# Copy this file to .env and add your actual API keys

# =====================================
# REQUIRED FOR PHASE 1: RAG SYSTEM
# =====================================

# Qdrant Vector Database (Required)
# Get free cloud account at: https://cloud.qdrant.io/
VITE_QDRANT_URL=https://your-cluster-url.qdrant.io
VITE_QDRANT_API_KEY=your-qdrant-api-key

# OpenAI API (Required)
# Get API key at: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=sk-your-openai-key

# =====================================
# APPLICATION CONFIGURATION
# =====================================

# Application Environment
VITE_APP_ENV=development

# Optional: Custom API endpoints
VITE_API_BASE_URL=http://localhost:3001

# MCP Server Configuration
MCP_PORT=3001

# =====================================
# SEARCH SERVICE CONFIGURATION
# =====================================

# Document Processing Settings
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_CHUNK_SIZE=500          # Words per chunk
VITE_CHUNK_OVERLAP=50        # Words overlap between chunks

# Vector Search Settings
VITE_SEARCH_LIMIT=10         # Default search results limit
VITE_SCORE_THRESHOLD=0.7     # Minimum similarity score

# =====================================
# FUTURE FEATURES (Optional)
# =====================================

# Phase 2: Enhanced Chat
VITE_ENABLE_STREAMING_CHAT=false
VITE_CHAT_CONTEXT_LIMIT=4000

# Phase 3: Video Processing
VITE_ENABLE_VIDEO_PROCESSING=false
VITE_MAX_VIDEO_DURATION=600  # 10 minutes in seconds

# Multi-Agent System
VITE_ENABLE_MULTI_AGENT=false

# =====================================
# DEVELOPMENT & DEBUGGING
# =====================================

# Enable debug logging
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Performance monitoring
VITE_ENABLE_ANALYTICS=false